package com.leyreromero.psp.cine_simulacion_concurrente;

public class Asiento {
	
	private final int numeroAsiento;
    private Cliente cliente;
    private boolean reservado = false;

    public Asiento(int numeroAsiento) {this.numeroAsiento = numeroAsiento;}
    
    public int getNumeroAsiento() {return numeroAsiento;}

    public synchronized boolean ocupar(Cliente cliente) {
        if (!reservado) {
            this.cliente = cliente;
            this.reservado = true;
            return true;
        }
        return false;
    }

	public boolean isReservado() {
		if (reservado) {
			return true;
		}
		return false;
		
	}
}
